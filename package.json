{
  "name": "podkiya-claude",
  "version": "1.0.0",
  "private": true,
  "description": "Podkiya - Micro-learning platform for 1-3 minute audio clips",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "db:generate": "npm run db:generate --workspace=packages/db",
    "db:push": "npm run db:push --workspace=packages/db",
    "db:migrate": "npm run db:migrate --workspace=packages/db",
    "db:seed": "npm run db:seed --workspace=packages/db",
    "db:studio": "npm run db:studio --workspace=packages/db",
    "jobs:dev": "npm run dev --workspace=packages/jobs",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
